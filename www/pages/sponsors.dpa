
<?php
$images = scandir(IMG_DIR . 'sponsors');
$count = 0;


echo '<div id="grid" data-columns>';

foreach($images as $image)
{
	if($count == 0)
		echo '<div class="column size-1of3">';

	
	if($image != '.' && $image != '..')
	{
		echo '
		<div class="sponsorcontainer">
			<img src="img/sponsors/' . $image . '" alt="Sponsor" />
		</div> ';

		
	}

	$count++;

	if($count == 2)
	{
		$count = 0;
		echo '</div>';
	}
}


echo "</div>";
?>
